    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.15.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "ts-node": "10.7.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
